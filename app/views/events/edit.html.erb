<div class="container">
  <h1 class="my-4">Edit event</h1>

    <%= form_with model: @event do |f| %>
      <div>
        <%= f.file_field :photo %>
      </div>
      <div class="my-4">
        <%= f.text_field :name, placeholder: "Your event name" %>
      </div>
      <div class="my-4">
        <h5>Select your attending friends</h5>
      </div>

      <div class="cards-2">
        <%= f.collection_check_boxes :user_id, @friend_list, :id, :full_name, { checked: @event.attendee_ids.map(&:to_param)} do |u| %>
          <div class="card-user">
            <%= u.check_box %>
            <%= u.label do %>
              <%= image_tag "user_icon.png", class: "avatar" %> <span><%= u.text %></span>
            <%end%>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-5">
        <%= f.submit "Update", class: 'btn btn-primary shadow' %>
      </div>
    <% end %>

</div>
