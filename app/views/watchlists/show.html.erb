<div class="container">
  <div class="row my-4">

    <div class="col-12 col-lg-4">
      <div class="movie-poster">
        <% if @movie.poster_path.nil? %>
          <%= image_tag("movie_icon.jpg", alt: "#{@movie.title}", style:"width: 185px; height: auto") %>
        <% else %>
          <img src="https://image.tmdb.org/t/p/w342<%= @movie.poster_path %>" alt="#{@movie.title}" />
        <% end %>
      </div>
    </div>

    <div class="col-12 col-lg-8">
      <h1><%= @movie.title %></h1>

      <h6><%= link_to "Remove from my watchlist", watchlist_path(@watchlist), method: :delete %></h6>

      <h4>Genre: <%= @movie.genres.join(" | ") %></h4>
      <h4>Runtime: <%= @movie.runtime %> minutes</h4>
      <h4>Rating: <%= @movie.vote_average %>/10</h4>
      <h5>Release date: <%= @movie.release_date.to_date.strftime("%B, %Y") %></h5>
      <h5>Director</h5>
      <% @movie.directors.each do |director| %>
        <%= director %>
      <% end %>
      <h5>Cast</h5>
      <% @movie.cast.each do |actor| %>
        <p><%= actor %></p>
      <% end %>
    </div>

  </div>

  <% if !@movie.trailer_key.blank? %>
    <div class="row my-4">
      <div class="col-12">
        <iframe width="600" height="340" src="https://www.youtube.com/embed/<%= @movie.trailer_key %>"></iframe>
      </div>
    </div>
  <% end %>

  <div class="row my-4">
    <div class="col-12">
      <h3>Overview</h3>
      <%= @movie.overview %>
    </div>
  </div>

</div>
